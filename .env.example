# ===========================================
# Digital Store - Environment Configuration
# ===========================================

# Application
NODE_ENV=development
APP_NAME=Digital Store
APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@db:5432/digital_store?schema=public
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=digital_store

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Backend Server
SERVER_PORT=3001
CORS_ORIGIN=http://localhost:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ===========================================
# Payment Gateway (Choose one)
# ===========================================

# Tripay
TRIPAY_API_KEY=
TRIPAY_PRIVATE_KEY=
TRIPAY_MERCHANT_CODE=
TRIPAY_MODE=sandbox

# Midtrans
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_MODE=sandbox

# ===========================================
# External API Integrations
# ===========================================

# Pterodactyl Panel
PTERODACTYL_URL=
PTERODACTYL_API_KEY=

# DigitalOcean
DIGITALOCEAN_API_TOKEN=

# Digiflazz (H2H Topup)
DIGIFLAZZ_USERNAME=
DIGIFLAZZ_API_KEY=

# ===========================================
# Email (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM=noreply@example.com
